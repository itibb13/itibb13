<Window x:Class="T3D2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="380">
    <StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="5,10,0,0">
            <Label Content="Geben Sie eine Zahl ein" Width="200" />
            <TextBox Name="tbZahl1" Height="23" Width="150" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5,10,0,0">
            <Label Content="Geben Sie den Exponenten ein" Width="200"/>
            <TextBox Name="tbZahl2" Height="23" Width="150" Margin="10,0,0,0"/>
        </StackPanel>
        <Button Content="Berechnen" Margin="5,10,5,0" IsDefault="True" Click="OnCalculate"/>

    </StackPanel>
</Window>
