<Window x:Class="T3C3_combobox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="T3C3-ComboBox" Height="391.608" Width="594.755">
    <StackPanel>
        <Label>Wählen Sie eine Farbe:</Label>
        <ComboBox HorizontalAlignment="Left" Height="23" SelectionChanged="selchangedColor" VerticalAlignment="Top" Width="151">

            <ComboBoxItem Content="Blau"/>
            <ComboBoxItem Content="Gelb"/>
            <ComboBoxItem Content="Rot"/>
            <ComboBoxItem Content="Schwarz"/>
            <ComboBoxItem Content="Grün"/>

        </ComboBox>
        <Label>gewählte Farbe:</Label>
        <TextBox Name="tb" Margin="0,0,425,0"></TextBox>
               
    </StackPanel>
</Window>
