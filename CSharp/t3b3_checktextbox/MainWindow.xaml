<Window x:Class="T3B3_CheckTextbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="0,5,0,-5">
        <StackPanel  Orientation="Horizontal" Margin="5,10,0,0">
            <Label Content="Klicken Sie Check1 an oder auch nicht" Width=" 250"/>
            <CheckBox Name="checkbox1" Content="Check1" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Click="checkbox1_Click" />

        </StackPanel>

        <StackPanel  Orientation="Horizontal" Margin="5,30,0,0">
            <Label Content="Klicken Sie Check2 an oder auch nicht" Width=" 250"/> 
            <CheckBox Name="checkbox2" Content="Check2" HorizontalAlignment="Left" Margin="10,7,0,0" Click="checkbox2_Click"/>
        </StackPanel>
        
        <Label Name="label" Margin="20,30,20,0"  Content="unchecked" />
    </StackPanel>
    
</Window>
